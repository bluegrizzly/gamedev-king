    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: FastAPI",
            "cwd": "${workspaceFolder}/api",
            "type": "debugpy",
            "request": "launch",
            "python": "${workspaceFolder}/api/.venv/Scripts/python",
            "osx": {
                "python": "${workspaceFolder}/api/.venv/bin/python"
            },
            "module": "uvicorn",
            "args": [
                "main:app",
                "--reload",
                "--port",
                "8000"
            ],
            "jinja": true
        }
    ]
}